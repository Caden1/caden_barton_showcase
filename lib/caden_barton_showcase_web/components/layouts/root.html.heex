<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />
    <.live_title default="Caden Barton Showcase" suffix=" Â· Caden Barton Showcase">
      {assigns[:page_title]}
    </.live_title>
    <link phx-track-static rel="stylesheet" href={~p"/assets/css/app.css"} />
    <script defer phx-track-static type="text/javascript" src={~p"/assets/js/app.js"}>
    </script>
    <script>
      (() => {
        const themes = ["synthwave", "dark-synth", "cyberpunk"];
        const fallbackTheme = "dark-synth";
        const storageKey = "phx:theme";

        const normalizeTheme = (value) =>
          themes.includes(value || "") ? value : fallbackTheme;

        const setTheme = (theme) => {
          const next = normalizeTheme(theme);
          localStorage.setItem(storageKey, next);
          document.documentElement.setAttribute("data-theme", next);
        };

        if (!document.documentElement.hasAttribute("data-theme")) {
          setTheme(localStorage.getItem(storageKey) || fallbackTheme);
        }

        window.addEventListener("storage", (e) => {
          if (e.key === storageKey) setTheme(e.newValue || fallbackTheme);
        });

        window.addEventListener("phx:set-theme", (e) => setTheme(e.target.dataset.phxTheme));
      })();
    </script>
  </head>
  <body>
    {@inner_content}
  </body>
</html>
